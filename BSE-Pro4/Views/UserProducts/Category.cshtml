@model BSE_Pro4.Models.Category

@{
    ViewBag.Title = "Produkty w kategorii";
}

<h2>Kategoria - @Model.CategoryName</h2>

<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Products) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Wyświetl", "Details", new { id = item.ProductId }) 
        </td>
    </tr>
}

</table>
