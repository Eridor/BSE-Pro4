@model BSE_Pro4.Models.Product

@{
    ViewBag.Title = "Informacje o produkcie";
}

<h2>Informacje o produkcie</h2>

@using (Html.BeginForm("AddItem","UserCarts", new { id = Model.ProductId , quantity = 1 }))
{
<div>
    <h4>Książka</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Autor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Name) @Html.DisplayFor(model => model.Author.Surname)
        </dd>

        <dt>
            Kategoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
           Podatek
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tax.Description)
        </dd>

        <dt>
            Tytuł
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Opis
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Desc)
        </dd>

        <dt>
            Format
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Format)
        </dd>

        <dt>
            Ilość stron
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pages)
        </dd>

        <dt>
            Dostępna ilość
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuantityAvailable)
        </dd>

        <dt>
            Cena
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>

        <dt>
            Rabat
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Discount)
        </dd>

        <dt>
           Ilość
        </dt> 

        <dd>
            @Html.DropDownList("drp", new SelectList(ViewBag.list, "Text", "Value"))
        </dd>
    </dl>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
<p> 
    
    @Html.ActionLink("Powrót do listy", "Index")
</p>
