@model BSE_Pro4.Models.Product
@{
    ViewBag.Title = "Informacje o produkcie";
    Func<double, double, double> Sum = (a, b) => a + b;
    Func<double, double, double> CenaNetto = (a, b) => a * b;
    Func<double, double, double, double> CenaBrutto = (a, b, vat) => a * b * (1 + vat);
    Func<double, double, double> CenaZRabatem = (a, rabat) => a * (1 - rabat);
}

<h2>Informacje o produkcie</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Autor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Name)
        </dd>

        <dt>
            Kategoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            Podatek
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tax.Description)
        </dd>

        <dt>
            Tytuł
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Opis
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Desc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Format)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Format)
        </dd>

        <dt>
            Ilość stron
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pages)
        </dd>

        <dt>
            Dostępna ilość
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuantityAvailable)
        </dd>

        <dt>
            Cena
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>

        <dt>
            <label>Rabat</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Discount)
        </dd>
</dl>
</div>
