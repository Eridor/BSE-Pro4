@model BSE_Pro4.Models.UserShipment

@{
    ViewBag.Title = "Nowe dane adresowe";
}

<h2>Nowe dane adresowe</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Dane adresowe</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            <p class="control-label col-md-2">
                Dane do faktury?
            </p> 
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Invoice)
                        @Html.ValidationMessageFor(model => model.Invoice, "", new { @class = "text-danger" })
                    </div>
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Imię
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Nazwisko
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Państwo
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Miasto
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Kod pocztowy
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Ulica
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Numer domu
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberHouse, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberHouse, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Numer mieszkania
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberFlat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberFlat, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <p class="control-label col-md-2">
                Telefon
            </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
