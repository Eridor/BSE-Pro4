@model IEnumerable<BSE_Pro4.Models.UserShipment>

@{
    ViewBag.Title = "Adresy wysyłki/faktury";
}

<h2>Adresy wysyłki/faktury</h2>

<p>
    @Html.ActionLink("Stwórz nowe dane wysyłkowe", "Create") | @Html.ActionLink("Powrót do panelu użytkownika", "Index", "ApplicationUsers")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            Faktura
        </th>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Kraj
        </th>
        <th>
            Miasto
        </th>
        <th>
            Kod pocztowy
        </th>
        <th>
            Ulica
        </th>
        <th>
            Nr domu
        </th>
        <th>
            Nr mieszkania
        </th>
        <th>
            Telefon
        </th>
        <th>
           Dodatkowe informacje
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Invoice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberHouse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberFlat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdditionalInfo)
        </td>
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id=item.UserShipId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.UserShipId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.UserShipId })
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Powrót do panelu użytkownika", "Index","ApplicationUsers")
</div>