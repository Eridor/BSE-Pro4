
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<p>@Html.ActionLink("Create new user account", "UserCreate", null, new {@class = "btn btn-success" })</p>
<p>
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    @Html.ActionLink("Edit", "UserEdit", new { id = item.Id }, new { @class = "btn btn-primary" }) @Html.ActionLink("Delete", "UserDelete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</p>