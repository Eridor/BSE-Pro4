
@{
    ViewBag.Title = "Lista uprawnień";
}

<h2>Lista uprawnień</h2>

@Html.ActionLink("Stwórz nowe uprawnienie", "RoleCreate") | @Html.ActionLink("Zarządzaj uprawnieniami użytkowników", "ManageUserRoles")
<hr />
<div>
    @foreach (var role in Model)
    {
        <p>
            <strong>@role.Name</strong> >> 
            <span onclick="return confirm('Are you sure?')"><a href="/Admin/RoleDelete?RoleName=@role.Name" class="delLink" style="color:red;">Delete</a></span>
        </p>
    }
</div>